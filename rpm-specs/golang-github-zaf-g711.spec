# Generated by go2rpm 1.8.0
%bcond_without check

# https://github.com/zaf/g711
%global goipath         github.com/zaf/g711
Version:                1.2

%gometa -f

%global common_description %{expand:
Go package to encode and decode ITU-T G.711 sound data.}

%global golicenses      LICENSE
%global godocs          Readme.md

Name:           %{goname}
Release:        %autorelease
Summary:        Go package to encode and decode ITU-T G.711 sound data

License:        BSD-3-Clause
URL:            %{gourl}
Source:         %{gosource}

%description %{common_description}

%gopkg

%prep
%goprep

%generate_buildrequires
%go_generate_buildrequires

%build
for cmd in cmd/* ; do
  %gobuild -o %{gobuilddir}/bin/$(basename $cmd) %{goipath}/$cmd
done

%install
%gopkginstall
install -m 0755 -vd                     %{buildroot}%{_bindir}
install -m 0755 -vp %{gobuilddir}/bin/* %{buildroot}%{_bindir}/

%if %{with check}
%check
%gocheck
%endif

%files
%license LICENSE
%doc Readme.md
%{_bindir}/*

%gopkgfiles

%changelog
%autochangelog
